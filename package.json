{
  "name": "kenya-tax-rates",
  "version": "1.0.0",
  "description": "Kenya payroll tax calculation utilities - PAYE, SHIF, NSSF, Housing Levy and reliefs",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "kenya",
    "tax",
    "paye",
    "shif",
    "nssf",
    "payroll",
    "salary",
    "calculator",
    "housing-levy"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/enjuguna/kenya-tax-rates"
  }
}
